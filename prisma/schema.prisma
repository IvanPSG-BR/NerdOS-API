generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DIRECT_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
}

model Customers {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  ddd       String
  phone     String
  cpf       String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  devices       Devices[]
  serviceOrders ServiceOrders[]
}

model Devices {
  id        Int      @id @default(autoincrement())
  customerId Int
  brand     String
  model     String
  serial    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer      Customers       @relation(fields: [customerId], references: [id])
  serviceOrders ServiceOrders[]
}

model ServiceOrders {
  id        Int      @id @default(autoincrement())
  customerId Int
  deviceId  Int
  number    Int      @unique
  deviceProblem String
  service   String
  value     Float
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer Customers @relation(fields: [customerId], references: [id])
  device   Devices   @relation(fields: [deviceId], references: [id])
}
