generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum CUSTOMERSTATUS {
  ACTIVE
  INACTIVE
}

enum OSSTATUS {
  EM_ANALISE
  AGUARDANDO_APROVACAO
  EM_REPARO
  CONCLUIDO
  ENTREGUE
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
}

model Customers {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  ddd       String
  phone     String
  cpf       String?  @unique
  customerStatus    CUSTOMERSTATUS   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  devices       Devices[]
  serviceOrders ServiceOrders[]
}

model Devices {
  id        Int      @id @default(autoincrement())
  customerId Int
  brand     String
  model     String
  serial    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer      Customers       @relation(fields: [customerId], references: [id])
  serviceOrders ServiceOrders[]
}

model ServiceOrders {
  id        String   @id @db.Char(15)
  customerId Int
  deviceId  Int
  deviceProblem String
  service   String
  value     Float
  osStatus  OSSTATUS @default(EM_ANALISE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer Customers @relation(fields: [customerId], references: [id])
  device   Devices   @relation(fields: [deviceId], references: [id])
}
